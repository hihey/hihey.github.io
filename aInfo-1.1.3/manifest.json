{
    "manifest_version": 2,//清单文件的版本，这个必须写，而且必须是2
    "name": "aInfo",//插件的名称
    "version": "1.1.3",//插件的版本
    "description": "查看prd环境信息",//插件描述
    "icons": {
        "16": "img/icon.png",
        "48": "img/icon.png",
        "128": "img/icon.png"
    },
    "background": {
        "scripts": ["js/background.js"]
    },
    "browser_action": {
        "default_icon": "img/icon.png",
        "default_title": "查看prd环境信息",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            //"matches": ["http://*/*", "https://*/*"],
            // "<all_urls>" 表示匹配所有地址
            "matches": [
                "<all_urls>"
            ],
            "js": [//多个JS按顺序注入
                "js/jquery.min.js",
                "js/config.js",
                "js/core.js",
                "js/clipboard.min.js"
            ],
            "css": [
                "css/core.css"
            ],
            "run_at": "document_idle",
            "all_frames": false
        }
    ],
    "permissions": [
        "contextMenus",
        "tabs",
        "notifications",
        "webRequest",
        "webRequestBlocking",
        "storage",
        "http://*/*",
        "https://*/*"
    ],
    "web_accessible_resources": [
        "js/inject.js"
    ],
    "devtools_page": "devtools.html",
    "content_security_policy": "script-src 'self' 'unsafe-eval' https://maps.googleapis.com/; object-src 'self'"
}